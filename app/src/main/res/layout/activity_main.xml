<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/morelightgray"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/displayResult"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:textAlignment="textEnd">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewParentheses"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textAlignment="textEnd"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/displayCalculation"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text=""
            android:textAlignment="textEnd"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewOperation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:text=""
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text=""
            android:textAlignment="textStart"
            android:textSize="34sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonsBase"
        android:layout_width="match_parent"
        android:layout_height="373dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/firstLineButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/percent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:onClick="percent"
                android:text="%"
                android:textSize="34sp"
                android:textStyle="bold"
                android:theme="@style/ThemeNumberButtons.Calculadora" />

            <Button
                android:id="@+id/closeParenthese"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:onClick="openParenthese"
                android:text="("
                android:textSize="34sp"
                android:textStyle="bold"
                android:theme="@style/ThemeNumberButtons.Calculadora" />

            <Button
                android:id="@+id/openParenthese"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:onClick="closeParenthese"
                android:text=")"
                android:textSize="34sp"
                android:textStyle="bold"
                android:theme="@style/ThemeNumberButtons.Calculadora" />

            <Button
                android:id="@+id/div"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:onClick="div"
                android:text="รท"
                android:textSize="34sp"
                android:textStyle="bold"
                android:theme="@style/ThemeOperationButtons.Calculadora" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondLineButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:onClick="seven"
                android:text="7"
                android:textSize="34sp"
                android:textStyle="bold"
                android:theme="@style/ThemeNumberButtons.Calculadora" />

            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:onClick="eight"
                android:text="8"
                android:textSize="34sp"
                android:textStyle="bold"
                android:theme="@style/ThemeNumberButtons.Calculadora" />

            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:onClick="nine"
                android:text="9"
                android:textSize="34sp"
                android:textStyle="bold"
                android:theme="@style/ThemeNumberButtons.Calculadora" />

            <Button
                android:id="@+id/mul"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:onClick="mul"
                android:text="x"
                android:textSize="34sp"
                android:textStyle="bold"
                android:theme="@style/ThemeOperationButtons.Calculadora" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdLineButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:onClick="four"
                android:text="4"
                android:textSize="34sp"
                android:textStyle="bold"
                android:theme="@style/ThemeNumberButtons.Calculadora" />

            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:onClick="five"
                android:text="5"
                android:textSize="34sp"
                android:textStyle="bold"
                android:theme="@style/ThemeNumberButtons.Calculadora" />

            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:onClick="six"
                android:text="6"
                android:textSize="34sp"
                android:textStyle="bold"
                android:theme="@style/ThemeNumberButtons.Calculadora" />

            <Button
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:onClick="sub"
                android:text="-"
                android:textSize="34sp"
                android:textStyle="bold"
                android:theme="@style/ThemeOperationButtons.Calculadora" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourthLineButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:onClick="one"
                android:text="1"
                android:textSize="34sp"
                android:textStyle="bold"
                android:theme="@style/ThemeNumberButtons.Calculadora" />

            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:onClick="two"
                android:text="2"
                android:textSize="34sp"
                android:textStyle="bold"
                android:theme="@style/ThemeNumberButtons.Calculadora" />

            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:onClick="three"
                android:text="3"
                android:textSize="34sp"
                android:textStyle="bold"
                android:theme="@style/ThemeNumberButtons.Calculadora" />


            <Button
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:onClick="add"
                android:text="+"
                android:textSize="34sp"
                android:textStyle="bold"
                android:theme="@style/ThemeOperationButtons.Calculadora" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifthLineButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:onClick="zero"
                android:text="0"
                android:textSize="34sp"
                android:textStyle="bold"
                android:theme="@style/ThemeNumberButtons.Calculadora" />

            <Button
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:onClick="point"
                android:text="."
                android:textSize="34sp"
                android:textStyle="bold"
                android:theme="@style/ThemeNumberButtons.Calculadora" />

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:onClick="back"
                android:text="โซ"
                android:textSize="34sp"
                android:textStyle="bold"
                android:theme="@style/ThemeNumberButtons.Calculadora" />

            <Button
                android:id="@+id/equals"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1"
                android:onClick="equals"
                android:text="="
                android:textSize="34sp"
                android:textStyle="bold"
                android:theme="@style/ThemeEqualsButtons.Calculadora" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>